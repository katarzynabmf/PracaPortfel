@model IEnumerable<Portfel.Data.Data.Aktywo>

@{
    ViewData["Title"] = "Index";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-primary">Aktywa</h1>
            <a asp-action="AktualizacjaCeny" title="Zaktualizuj" class="d-sm-inline-block btn btn-success shadow-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-repeat" viewBox="0 0 16 16">
                    <path d="M11.534 7h3.932a.25.25 0 0 1 .192.41l-1.966 2.36a.25.25 0 0 1-.384 0l-1.966-2.36a.25.25 0 0 1 .192-.41zm-11 2h3.932a.25.25 0 0 0 .192-.41L2.692 6.23a.25.25 0 0 0-.384 0L.342 8.59A.25.25 0 0 0 .534 9z"/>
                    <path fill-rule="evenodd" d="M8 3c-1.552 0-2.94.707-3.857 1.818a.5.5 0 1 1-.771-.636A6.002 6.002 0 0 1 13.917 7H12.9A5.002 5.002 0 0 0 8 3zM3.1 9a5.002 5.002 0 0 0 8.757 2.182.5.5 0 1 1 .771.636A6.002 6.002 0 0 1 2.083 9H3.1z"/>
                </svg>
               Zaktualizuj cenę
            </a>

            <a asp-action="Create" title="Dodaj" class="d-sm-inline-block btn btn-primary shadow-sm">
                <i class="fas fa-plus-square fa-sm text-white-50"></i> Dodaj   </a>
        </div>
</div>
      <div class="card-body">
            <div class="table-responsive">
<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Symbol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aktywna)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CenaAktualna)
            </th>
            <th class="text-center th-action">Akcja</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aktywna)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CenaAktualna)
            </td>
            <td>
              <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-circle btn-sm" title="Edytuj"><i class="fas fa-pencil-alt"> </i> </a>
                  <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-circle btn-sm delete" title="Usuń"><i class="fas fa-trash"> </i</a> 
            </td>
        </tr>
}
    </tbody>
</table>
 </div>
  </div>
</div>