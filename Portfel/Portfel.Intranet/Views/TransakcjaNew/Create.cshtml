@model Portfel.Data.Data.TransakcjaNew

@{
    ViewData["Title"] = "Create";
}
<body class="bg-gradient-primary">
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Utwórz transakcję</h1>
                            </div>
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">

                                    <select asp-for="PortfelId" class="form-control" asp-items="ViewBag.PortfelId"></select>
                                </div>
                                <div class="form-group">

                                    <select asp-for="AktywoId" class="form-control" asp-items="ViewBag.AktywoId"></select>
                                </div>
                                <div class="form-group">

                                    <select asp-for="Kierunek" class="form-control" asp-items="ViewBag.Kierunki"></select>
                                </div>
                                <div class="form-group">

                                    <input asp-for="DataTransakcji" class="form-control form-control-user" id="exampleFirstName" placeholder="Data utworzenia" />
                                    <span asp-validation-for="DataTransakcji" class="text-danger"></span>
                                </div>
                                <div class="form-group">

                                    <input asp-for="Cena" class="form-control form-control-user" placeholder="Cena" />
                                    <span asp-validation-for="Cena" class="text-danger"></span>
                                </div>

                                <div class="form-group">

                                    <input asp-for="Ilosc" class="form-control form-control-user" placeholder="Ilość" />
                                    <span asp-validation-for="Ilosc" class="text-danger"></span>
                                </div>
                                <div class="form-group">

                                    <input asp-for="Komentarz" class="form-control form-control-user" placeholder="Komentarz" />
                                    <span asp-validation-for="Komentarz" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Utwórz transakcję" class="btn btn-primary btn-user btn-block" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

</body>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
