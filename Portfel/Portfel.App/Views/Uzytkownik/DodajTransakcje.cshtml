@model Portfel.Data.Data.Transakcja

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="about" class="about" style="margin-bottom: 55px;">
<div class="container" data-aos="fade-up">

    <div class="section-header">
        <h2>Dodaj nową transakcję</h2>
    </div>
<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
            <div class="card" style="border-radius: 15px;  border-color: white;
                                     box-shadow: 0px 2px 25px rgb(0 0 0 / 10%);">
                <div class="card-body p-5">
                    <div class="info-item d-flex">
                    </div><!-- End Info Item -->
                    <form asp-action="DodajTransakcje" asp-controller="Uzytkownik">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="KontoId" />
                    <div class="form mb-4">
                        <label asp-for="RodzajTransakcjiId"></label>
                        <select asp-for="RodzajTransakcjiId" class ="form-control form-control-lg" asp-items="ViewBag.RodzajTransakcjiId"></select>
                    </div>
                    <div class="form mb-4">
                        <label asp-for="Waluta" ></label>
                        <input asp-for="Waluta" id="form3Example1cg" class="form-control form-control-lg" />
                        <span asp-validation-for="Waluta" class="text-danger"></span>
                    </div>
              
                <div class="form mb-4">
                    <label asp-for="SymbolGieldowyId" class="control-label"></label>
                    <select asp-for="SymbolGieldowyId" class ="form-control form-control-lg" asp-items="ViewBag.SymbolGieldowyId"></select>
                </div>
                <div class="form mb-4">
                    <label asp-for="Kwota" class="control-label"></label>
                    <input asp-for="Kwota" id="form3Example1cg" class="form-control form-control-lg"/>
                    <span asp-validation-for="Kwota" class="text-danger"></span>
                </div>
                <div class="form mb-4">
                    <label asp-for="Ilosc" class="control-label"></label>
                    <input asp-for="Ilosc" id="form3Example1cg" class="form-control form-control-lg"/>
                    <span asp-validation-for="Ilosc" class="text-danger"></span>
                </div>
                    <div class="form mb-4">
                        <label asp-for="RodzajOplatyId" class="control-label"></label>
                        <select asp-for="RodzajOplatyId" class ="form-control form-control-lg" asp-items="ViewBag.RodzajOplatyId"></select>
                    </div>
                    <div class="form mb-4">
                        <label asp-for="IloscRodzajuOplaty" class="control-label"></label>
                        <input asp-for="IloscRodzajuOplaty" id="form3Example1cg" class="form-control form-control-lg"/>
                        <span asp-validation-for="IloscRodzajuOplaty" class="text-danger"></span>
                    </div>
                <div class="form mb-4">
                    <label asp-for="Komentarz" class="control-label"></label>
                    <textarea rows="5" asp-for="Komentarz" id="form3Example1cg" class="form-control form-control-lg"></textarea>
                    <span asp-validation-for="Komentarz" class="text-danger"></span>
                </div>
                        <div class="d-flex justify-content-center">
                            <input type="submit" value="Dodaj Transakcję" style="background: var(--color-primary); border: 0; padding: 14px 45px; color: #fff; transition: 0.4s; border-radius: 50px; margin-top: 8px;"/>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
</div>
</section>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
