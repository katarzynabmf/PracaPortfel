@{
}
@model IEnumerable<Portfel.Data.Data.Konto>


<h1>Moje konta</h1>
<h2>Witaj zalogowany</h2>

<p>
    <a asp-action="DodajKonto">Dodaj nowe konto</a>
</p>
<table class="table align-middle mb-0 bg-white table-striped table-hover">
    <thead class="bg-light">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Waluta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gotowka)
        </th>
  
        <th>Szczegóły</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Waluta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gotowka)
            </td>
            <td>
                <a asp-action="SzczegolyKonta" asp-controller="Uzytkownik" 
                   asp-route-id="@item.Id"
                   class = "button_maly"
                >Szczegóły konta</a>
            </td>
        </tr>
    }
    </tbody>
</table>
