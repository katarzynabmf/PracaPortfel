@model Portfel.Data.Data.Aktualnosc

@{
    ViewData["Title"] = "Szczegoly";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="my-5">
            <div class="row d-md-flex">
                <div class="col-md-6 ">
                    <div class="row">

                        <div class="col-md-12 mb-5">
                            <div>
                                <h2 class="Onas">@Model.Tytul</h2>
                            </div>
                        </div>
                        <div class="col-md-12">

                            <div class="tab-content">
                                <div>
                                    <div>
                                        <p>@Html.Raw(Model.Tresc)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <img class="card-img-top m-auto" src="@Model.FotoUrl" alt="Card image cap" style="width: 50%;">
                <div class="card-body">
                    <a asp-action="Index" class="btn btn-danger dropright">Powrót</a>
                </div>
            </div>

        </div>
    </div>
</section>

