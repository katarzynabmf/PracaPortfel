@{
}
@model IEnumerable<Portfel.Data.Data.Portfel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{
    <p>Portfel: </p>
    <h5 class="center">@item.Nazwa</h5>
    <p>Id portfela: </p> <p class="light">@item.Id</p>
      
    <p>KontoId: </p>   <p class="light">@item.KontoGotowkowe.Id</p>
    <p>Stan Konta </p>   <p class="light">@item.KontoGotowkowe.StanKonta zł</p>
    <p>.......</p>
}

<section id="about" class="about" style="margin-bottom: 55px;">
<div class="container" data-aos="fade-up">

    <div class="section-header">
        <h2>Moje portfele</h2>
        <p>
            <a asp-action="" style="background: var(--color-primary); border: 0; padding: 8px 25px; color: #fff; transition: 0.4s; border-radius: 50px; margin-top: 8px;">Dodaj nowy portfel</a>
        </p>
    </div>
    <table class="table align-middle mb-0 bg-white table-striped table-hover">
        <thead class="bg-light">
        <tr>
            <th>
               Nazwa
            </th>
            <th>
                Stan konta
            </th>
         <th> Akcje</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @item.Nazwa
                </td>
                <td>
                    @item.KontoGotowkowe.StanKonta
                <td>
                  <a asp-action="" asp-controller="Home" 
                     asp-route-id="@item.Id"
                     style="background: var(--color-primary); border: 0; padding: 2px 12px; color: #fff; transition: 0.4s; border-radius: 50px; margin-top: 8px;"
                  >Wpłać kwotę</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
</section>