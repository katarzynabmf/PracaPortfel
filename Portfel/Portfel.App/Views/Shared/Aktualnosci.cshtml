
@using Microsoft.CodeAnalysis.CSharp.Syntax
@model AktualnosciIAktywa
@{
    ViewData["Title"] = "Aktualnosci";
 
}

<main id="main">
    <!-- ======= Our Services Section ======= -->
<section id="services" class="services sections-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <h2>Aktualności</h2>
            <p>Co nowego u nas słychać</p>
        </div>

        <div class="row gy-4" data-aos="fade-up" data-aos-delay="100">
        
        
        
        
            <script src="~/assets/js/main.js"></script>
            @foreach (var aktualnosc in Model.Aktualnosci)
            {
                if (aktualnosc.Pozycja == "Aktualnosc")
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="service-item  position-relative">
                            <div class="icon">
                                <i class="bi bi-info-circle"></i>
                            </div>
                            <h3>@aktualnosc.Tytul</h3>
                            <p>@aktualnosc.Tresc.Substring(0, 100)</p>
                            <a asp-action="Szczegoly" asp-route-id="@aktualnosc.Id" class="readmore stretched-link">
                                Czytaj dalej <i class="bi bi-arrow-right"></i>
                            </a>

                        </div>
                    </div>
                    <!-- End Service Item -->
                }
            }
        </div>

    </div>

</section><!-- End Our Services Section -->
   
   <!-- ======= Clients Section ======= -->
    <section id="clients" class="clients">
      <div class="container" data-aos="zoom-out">
      <div class="clients-slider swiper">
          <div class="swiper-wrapper align-items-center">
              @foreach (var aktywo in Model.Aktywa)
              {
                  <div class="swiper-slide">
                      
                      <div class="section-header" style="padding-bottom: 1px">
                          <h2>@aktywo.Symbol</h2>
                          <p>@aktywo.CenaAktualna zł</p>
                      </div>
                      @*
                      <h2 class="section-header"> 
                          @aktywo.Symbol
                      </h2>
                      <p style="text-align: center">@aktywo.CenaAktualna zł</p>*@
                  </div>
              }
          </div >
          </div>
      </div>
    </section><!-- End Clients Section -->
    <!-- ======= Clients Section ======= -->
   

    <!-- ======= Recent Blog Posts Section ======= -->
    <section id="recent-posts" class="recent-posts sections-bg" style="margin-bottom: 100px;">
      <div class="container" data-aos="fade-up">

        <div class="section-header">
          <h2>Ostatnie posty na blogu</h2>
          <p>Jeżeli jesteś zainteresowany temat przechowywania inwestycji online, zajrzyj na nasze posty i artkuły</p>
        </div>

        <div class="row gy-4">
            
        @foreach (var aktualnosc in Model.Aktualnosci)
        {
            if (aktualnosc.Pozycja == "Post")
            {
     
            <div class="col-xl-4 col-md-6">
                <article>

                    <div class="post-img">
                        <img src="assets/img/blog/@aktualnosc.FotoUrl" alt="" class="img-fluid">
                    </div>
                    <p class="post-category">@aktualnosc.DataDodania.ToShortDateString()</p>

                    <h2 class="title">
                        <a asp-action="Szczegoly" asp-route-id="@aktualnosc.Id">@aktualnosc.Tytul</a>
                    </h2>


                </article>
            </div><!-- End post list item -->
        }
        }
        </div><!-- End recent posts list -->
      </div>
    </section><!-- End Recent Blog Posts Section -->

</main>

