@model WszystkieTransakcjeDlaPortfela
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="about" class="about" style="margin-bottom: 55px;">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <h2>@Model.NazwaPortfela</h2>
        </div>
        <table class="table align-middle mb-0 bg-white table-striped table-hover">
            <thead class="bg-light">
            <tr>
                <th>
                    <div>Data dodania</div>
                </th>
                <th>
                    <div>Rodzaj transakcji</div>
                </th>
                <th>
                    <div>Aktywo</div>
                </th>
                <th>
                    <div>Symbol giełdowy</div>
                </th>
                <th>
                    <div>Cena</div>
                </th>
                <th>
                    <div>Ilość</div>
                </th>
                <th>
                    <div>Komentarz</div>
                </th>
                <th>Akcje</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Transakcje) {
                <tr>
                    <td>
                        @* @Html.DisplayFor(modelItem => item.Date.ToString(string.Format("dd/MM/yyyy")))*@
                        @*   @Html.DisplayFor(modelItem => item.DataTransakcji)*@
                        @item.DataTransakcji.ToShortDateString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kierunek)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aktywo.Nazwa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cena)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ilosc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ilosc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Komentarz)
                    </td>
                    <td>
                 @*       <a asp-action="EdytujTransakcje" asp-controller="Uzytkownik" 
                           asp-route-id="@item.Id"
                           style="background: var(--color-primary); border: 0; padding: 2px 12px; color: #fff; transition: 0.4s; border-radius: 50px; margin-top: 8px;"
                        >Edytuj</a>
                        <a asp-action="UsunTransakcje" asp-controller="Uzytkownik" 
                           asp-route-id="@item.Id"
                           style="background: var(--color-primary); border: 0; padding: 2px 12px; color: #fff; transition: 0.4s; border-radius: 50px; margin-top: 8px;"
                        >Usuń</a>*@
                    </td>

                </tr>
            }
            </tbody>
        </table>
    </div>
</section>