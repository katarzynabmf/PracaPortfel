@model Portfel.App.Models.WplataNaPortfelRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="about" class="about" style="margin-bottom: 55px;">
<div class="container" data-aos="fade-up">

    <div class="section-header">
        <h2>Wpłać kwotę do portfela</h2>
    </div>
<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
            <div class="card" style="border-radius: 15px;  border-color: white;
                                     box-shadow: 0px 2px 25px rgb(0 0 0 / 10%);">
                <div class="card-body p-5">
                    <div class="info-item d-flex">
                    </div><!-- End Info Item -->
                    <form asp-action="WplacKwote">
                        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                        <div class="form mb-4">
                            <label asp-for="Kwota" ></label>
                            <input asp-for="Kwota" id="form3Example1cg" class="form-control form-control-lg"/>
                            <span asp-validation-for="Kwota"></span>
                            <!--input type="hidden" asp-for="IdPortfela" /-->
                        </div>
                        <div class="d-flex justify-content-center">
                            <input type="submit" value="Wpłać kwotę" style="background: var(--color-primary); border: 0; padding: 14px 45px; color: #fff; transition: 0.4s; border-radius: 50px; margin-top: 8px;"/>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
</div>
</section>
